@using Education.ViewModel;

@model List<PlaylistVM>



<section class="courses">

    <h1 class="heading">all courses</h1>
    <div class="box-container">
             @foreach (var item in Model)
             {
        <div class="box">
            <div class="tutor">
                <img src="@item.AppUser.Image" alt="">
                <div>
                   <h3>@item.AppUser.UserName</h3>
                    <span>@item.DateCreated.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
              <img src="@item.Thumb" class="thumb" alt="">
                <h3 class="title">@item.Title</h3>
              <a asp-controller="Playlist" asp-action="Detail" asp-route-id="@item.Id" class="inline-btn">view playlist</a>
        </div>
             }
       
    </div>

</section>

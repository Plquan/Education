@using Education.WebApp.Models
@model RegisterVM

      
<section class="form-container">

    <form class="register" action="" method="post">
        <h3>register new</h3>
        <div class="flex">
            <div class="col">
                <p>your name <span>*</span></p>
                <input type="text"  asp-for="Name" placeholder="eneter your name" maxlength="500" required class="box"/>
                <p>your profession <span>*</span></p>
                <select  asp-for="Profession" class="box" required>
                    <option value="" disabled selected>-- select your profession</option>
                    <option value="student">student</option>
                    <option value="tutor">tutor</option>

                </select>
                <p>your email <span>*</span></p>
                <input type="email" asp-for="Email"  placeholder="enter your email" maxlength="260" required class="box"/>
            </div>
            <div class="col">
                <p>your password <span>*</span></p>
                <input type="password" asp-for="Password"  placeholder="enter your password" maxlength="200" required class="box"/>
                <span asp-validation-for="Password" class="text-danger"></span>
                <p>confirm password <span>*</span></p>
                <input type="password" asp-for="ConfirmPassword" nplaceholder="confirm your password" maxlength="200" required class="box"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <p>select pic <span>*</span></p>
                <input type="file" asp-for="Image"  required class="box"/>
            </div>
        </div>
        <p class="link">already have an account? <a href="@Url.Action("Login","Account")">login now</a></p>
        <input type="submit" name="submit" value="register now" class="btn">
    </form>

</section>
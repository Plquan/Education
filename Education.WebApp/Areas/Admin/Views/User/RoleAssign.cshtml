@using Education.ViewModel
@model RoleAssignRequest
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Role Assign</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Forms</li>
          <li class="breadcrumb-item active">Elements</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-6">
            <form method="post">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Role Assign</h5>

                        <div class="row mb-3">
                            <legend class="col-form-label col-sm-2 pt-0">Role</legend>
                            <div class="col-sm-10">
                                <div class="form-check">
                                        <input asp-for="@Model.IsAdmin" class="form-check-input" type="checkbox" id="gridCheck1">
                                    <label class="form-check-label" for="gridCheck1">
                                       Admin
                                    </label>
                                </div>                            

                            </div>
                        </div>
                                         
                            <div class="col-sm-10" style="margin-left:90px">
                                <button type="submit" class="btn btn-primary">Update</button>
                                    <a href="/Admin/User/Index" class="btn btn-secondary">Cancel</a>
                            </div>                    
            </div>
          </div>
                </form>
        </div>
      </div>
    </section>

  </main><!-- End #main -->


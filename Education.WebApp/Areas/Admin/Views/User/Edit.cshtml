@using Education.ViewModel
@model UpdateProfileVM

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Layouts</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-6">

                <div class="card" style="width:650px">
                    <div class="card-body">
                        <h5 class="card-title">Horizontal Form</h5>

                        <!-- Horizontal Form -->
                        <form style="margin-right:10px" method="post">
                            <input type="hidden" asp-for="UserId"/>
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Full Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Name">
                                    <p style="color:red">@ViewBag.name</p>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" asp-for="email">
                                    <p style="color:red">@ViewBag.email</p>
                                </div>
                            </div>               
                      
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Avatar</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control" asp-for="Image">
                                </div>
                            </div>


               
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a href="/Admin/User/Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>







            </div>
        </div>
    </section>

</main><!-- End #main -->

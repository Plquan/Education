@using Education.ViewModel.Users
@model CreateUserVM

 <main id="main" class="main">

    <div class="pagetitle">
      <h1>Form Layouts</h1>
      <nav>
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/User/Index">Home</a></li>
          <li class="breadcrumb-item active">Create</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row" >
        <div class="col-lg-6">

          <div class="card" style="width:650px">
            <div class="card-body">
              <h5 class="card-title">Create form</h5>

              <!-- Horizontal Form -->
              <form method ="post" style="margin-right:10px" enctype="multipart/form-data">

 

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Full Name</label>
                  <div class="col-sm-10">
                    <input type="text" asp-for="Name" class="form-control" id="inputText">
              <p style="color:red">@ViewBag.name</p>
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10">
                    <input type="email" asp-for="Email" class="form-control" id="inputEmail">
                     <p style="color:red">@ViewBag.email</p>
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                  <div class="col-sm-10">
                    <input type="password" asp-for="Password"  class="form-control" >
                   <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                </div>

                  <div class="row mb-3">
                   <label for="inputPassword3" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-10">
                    <input type="password" asp-for="ConfirmPassword" class="form-control">
                      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                      </div>
                      </div>

                      <div class="row mb-3">
                       <label for="inputPassword3" class="col-sm-2 col-form-label">Avatar</label>
                        <div class="col-sm-10">
                          <input type="file" asp-for ="Image" class="form-control">
                          </div>
                          </div>

                            <br>
                            <div class="row mb-3">
                                <legend class="col-form-label col-sm-2 pt-0">Account</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input asp-for="Role" class="form-check-input" type="checkbox" id="gridCheck1">
                                        <label class="form-check-label" for="gridCheck1">
                                            Tutor
                                        </label>
                                    </div>                              

                                </div>
                            </div>

                <div class="text-center">
                  <button type="submit" id="create" class="btn btn-primary">Create</button>
                  <a href="/Admin/User/Index" class="btn btn-secondary">Cancel</a>
                </div>
              </form><!-- End Horizontal Form -->

            </div>
          </div>

       
        </div>
      </div>
    </section>

  </main><!-- End #main -->

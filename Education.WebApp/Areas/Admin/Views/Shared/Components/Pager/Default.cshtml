@{
    var startpage = Math.Max(Model.PageIndex - 1, 1);
    var finishpage = Math.Min(Model.PageIndex + 1, Model.PageCount);
}

<nav aria-label="Page navigation example">
    <ul class="pagination">
       
            <li class="page-item">
            <a class="page-link" href="@urlpage.Replace("{0}", Model.PageIndex > 1 ?  (Model.PageIndex - 1).ToString() : (Model.PageIndex).ToString())" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        
        @for(int i = startpage; i <= finishpage; i++)
        {
            
                <li class="page-item @(i == Model.PageIndex ? "active" : "")" aria-current="page">
                <a class="page-link" href="@urlpage.Replace("{0}",@i.ToString())" >@i</a>
                </li>
          
        }
    
            <li class="page-item">
            <a class="page-link" href="@urlpage.Replace("{0}", Model.PageIndex < Model.PageCount ?  (Model.PageIndex + 1).ToString() : (Model.PageIndex).ToString())" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>          

    </ul>
</nav><!-- End Pagination with icons -->

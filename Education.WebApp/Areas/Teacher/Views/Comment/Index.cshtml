@using Education.Data.Entities
@model List<Comment>
<section class="comments">

    <h1 class="heading">user comments</h1>

    @if(Model.Count == 0)
    {
        <p class="empty">no comments added yet!</p>
    }
    else{
    <div class="show-comments">
       @foreach(var item in Model){
        <div class="box">
                <div class="content"><span>@item.DateCreated.ToString("dd/MM/yyyy")</span><p> - @item.Content.Title - </p><a href="view_content.php?get_id=<?= $fetch_content['id']; ?>">view content</a></div>
            <p class="text">@item.Message</p>
            <form action="">
                <button type="submit" asp-action="Delete" asp-controller="Comment" asp-route-Id="@item.Id" class="inline-delete-btn" onclick="return confirm('delete this comment?');">delete comment</button>
            </form>
        </div>
       }
    </div>
    }
</section>